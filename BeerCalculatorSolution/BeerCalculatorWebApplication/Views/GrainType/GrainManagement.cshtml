@model List<Common.DTOs.GrainTypeDTO> 

<h2>Grain Management</h2>
<div>
    <div>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td>
                        ID
                    </td>
                    <td>
                        Grain Name
                    </td>
                    <td>
                        Maximum Sugar Extraction
                    </td>
                </tr>
            </thead>
            <tbody>
                @foreach (var grainType in Model)
                {
                    <tr>
                        <td>
                            @grainType.GrainTypeID
                        </td>
                        <td>
                            @grainType.GrainName
                        </td>
                        <td>
                            @grainType.MaximumSugarExtraction
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div>
        <input type="button" class="btn btn-large btn-success" data-toggle="modal" data-target="#grain-modal" value="Create Grain" />
    </div>

    <div id="grain-modal" class="modal fade collapse" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Create Grain Type</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-2">
                            <label>Name:</label>
                        </div>
                        <div class="col-lg-3">
                            <input id="grain-name" class="form-control" />
                        </div>
                    </div>

                    <div class="row" style="margin-top:5px">
                        <div class="col-lg-5">
                            <label>Maximum Sugar Extraction:</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            <input id="max-sugar-ppg" class="form-control"/>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">

                    <input type="button" class="btn btn-success" onclick="saveGrain()" value="Save Grain" />

                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    function saveGrain()
    {
        var grain = getGrain();

        $.ajax({
            url: "/GrainType/CreateGrainType",
            type: "POST",
            data: grain,
            success: function (response) {
                console.log(response);
                $('#grain-modal').modal('toggle');
            },
            error: function () {
                alert("There was an error");
            }

        });
        

    }

    function getGrain()
    {
        var grainName = $('#grain-name').val();
        var extractionRate = $('#max-sugar-ppg').val();

        var grain = {};

        grain.GrainName = grainName;
        grain.MaximumSugarExtraction = extractionRate;

        return grain;
    }
</script>