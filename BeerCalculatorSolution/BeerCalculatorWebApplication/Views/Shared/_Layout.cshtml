<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/themes/base/css")
    @Styles.Render("~/Content/bootstrap-styles/css")
    <style>
        .wrapper{
            margin-right:auto;
            margin-left:auto;
            width:80%;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            @Html.ActionLink("Beer Calculator", "Index", "Home", new { @class = "navbar-brand" })
            <ul class="navbar-nav nav">
                <li>
                    <a href="javascript:void(0)">View Recipes</a>
                </li>
                <li>
                    <a href="javascript:void(0)">Create Recipes</a>
                </li>
                <li>
                    <a href="javascript:void(0)">View Grains</a>
                </li>
                <li>
                    <a href="javascript:void(0)">View Hops</a>
                </li>
                <li>
                    <a href="javascript:void(0)">View Yeast</a>
                </li>
                <li>
                    <a href="javascript:void(0)" data-toggle="dropdown">Ingredient Management</a>
                    <ul class="dropdown-menu">
                        <li><a>Grain Management</a></li>
                        <li><a href="javascript:void(0)" data-toggle="modal" data-target="#hop-modal">Hop Management</a></li>
                        <li><a href=javascript:void(0)>Yeast Management</a></li>
                    </ul>
                </li>
               
                
            </ul>
        </div>
    </nav>

    <div id="body" class="wrapper">
        @RenderBody()
    </div>

    <footer>

    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/ajaxlogin")
    @Scripts.Render("~/Scripts/bootstrap-scripts")
    @Scripts.Render("~/Scripts/customScripts")
</body>
</html>
