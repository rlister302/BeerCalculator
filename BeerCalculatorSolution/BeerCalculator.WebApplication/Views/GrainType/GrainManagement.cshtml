@model BeerCalculator.Common.DTOs.MessageContainer<IEnumerable<BeerCalculator.Common.DTOs.GrainTypeDTO>> 

<h2>Grain Management</h2>
<div>
    <div>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td>
                        ID
                    </td>
                    <td>
                        Grain Name
                    </td>
                    <td>
                        Maximum Sugar Extraction
                    </td>
                    <td>
                        Actions
                    </td>
                </tr>
            </thead>
            <tbody>
                @foreach (var grainType in Model.Data)
                {
                    <tr>
                        <td>
                            @grainType.GrainTypeID
                        </td>
                        <td>
                            @grainType.GrainName
                        </td>
                        <td>
                            @grainType.MaximumSugarExtraction
                        </td>
                        <td>
                            <button class="btn-sm btn-primary" data-toggle="modal" data-target="#edit-grain-modal" onclick="getEditGrainType(@grainType.GrainTypeID)">Edit</button>
                            <button class="btn-sm btn-danger" onclick="deleteGrainType(@grainType.GrainTypeID)">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div>
        <input type="button" class="btn btn-large btn-success" data-toggle="modal" data-target="#grain-modal" value="Create Grain" />
    </div>

    <div id="grain-modal" class="modal fade collapse" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Create Grain Type</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-2">
                            <label>Name:</label>
                        </div>
                        <div class="col-lg-3">
                            <input id="grain-name" class="form-control" />
                        </div>
                    </div>

                    <div class="row" style="margin-top:5px">
                        <div class="col-lg-5">
                            <label>Maximum Sugar Extraction:</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            <input id="max-sugar-ppg" class="form-control"/>
                        </div>
                    </div>

                    <div class="row" style="margin-top:5px">
                        <div class="col-lg-5">
                            <label>Maximum Extraction Rate:</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            <input id="max-extraction-rate" class="form-control" />
                        </div>
                    </div>

                    <div class="row" style="margin-top:5px">
                        <div class="col-lg-5">
                            <label>Lovibond:</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            <input id="lovibond" class="form-control" />
                        </div>
                    </div>


                </div>
                <div class="modal-footer">

                    <input type="button" class="btn btn-success" onclick="saveGrain()" value="Save Grain" />

                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                </div>
            </div>

        </div>
    </div>

    <div id="edit-grain-modal" class="modal fade collapse" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Edit Grain Type</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-2">
                            <label>Name:</label>
                        </div>
                        <div class="col-lg-3">
                            <input id="edit-grain-name" class="form-control" />
                        </div>
                    </div>

                    <div class="row" style="margin-top:5px">
                        <div class="col-lg-5">
                            <label>Maximum Sugar Extraction:</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            <input id="edit-max-sugar-ppg" class="form-control" />
                        </div>
                    </div>

                    <div class="row" style="margin-top:5px">
                        <div class="col-lg-5">
                            <label>Maximum Extraction Rate:</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            <input id="edit-max-extraction-rate" class="form-control" />
                        </div>
                    </div>

                    <div class="row" style="margin-top:5px">
                        <div class="col-lg-5">
                            <label>Lovibond:</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            <input id="edit-lovibond" class="form-control" />
                        </div>
                    </div>


                </div>
                <div class="modal-footer">

                    <input type="button" class="btn btn-success" onclick="editGrain()" value="Edit Grain" />

                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                </div>
            </div>

        </div>
    </div>

    <input class="hidden" id="edit-grain-id" />
</div>