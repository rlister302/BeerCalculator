@model BeerCalculator.Common.DTOs.MessageContainer<IEnumerable<BeerCalculator.Common.DTOs.HopTypeDTO>>
<h2>Hop Management</h2>
<div>
    <div>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td>
                        ID
                    </td>
                    <td>
                        Hop Name
                    </td>
                    <td>
                        Flavor Notes
                    </td>
                </tr>
            </thead>
            <tbody>
                @foreach(var hopType in Model.Data)
                {
                    <tr>
                        <td>
                            @hopType.HopTypeID
                        </td>
                        <td>
                            @hopType.HopName
                        </td>
                        <td>
                            @hopType.FlavorNotes
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div>
        <input type="button" class="btn btn-large btn-success" data-toggle="modal" data-target="#hop-modal" value="Create Hop" />
    </div>

    <div id="hop-modal" class="modal fade collapse" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Create Hop Type</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-2">
                            <label>Name:</label>
                        </div>
                        <div class="col-lg-4">
                            <input id="hop-name" class="form-control" />
                        </div>
                    </div>

                    <div class="row" style="margin-top:5px">
                        <div class="col-lg-3">
                            <label>Flavor Notes</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            <textarea id="flavor-notes" class="form-control" style="height:250px"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">

                    <input type="button" class="btn btn-success" onclick="saveHop()" value="Save Hop" />

                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                </div>
            </div>

        </div>
    </div>


</div>

