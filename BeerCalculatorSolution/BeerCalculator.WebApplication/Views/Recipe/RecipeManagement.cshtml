@model List<BeerCalculator.Common.DTOs.RecipeDTO>

    <h2>Recipe Management</h2>
    <div>
        <div>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <td>
                            ID
                        </td>
                        <td>
                            Recipe Name
                        </td>
                        <td>
                            Expected Original Gravity
                        </td>
                        <td>
                            Expected Final Gravity
                        </td>
                        <td>
                            ABV
                        </td>
                        <td>
                            IBU
                        </td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var recipe in Model)
                    {
                        <tr>
                            <td>
                                <a href="javascript:void(0)" onclick="getRecipe(@recipe.RecipeID)">@recipe.RecipeID</a>
                            </td>
                            <td>
                                @recipe.RecipeName
                            </td>
                            <td>
                                @recipe.ExpectedOriginalGravity
                            </td>
                            <td>
                                @recipe.ExpectedFinalGravity
                            </td>
                            <td>
                                @recipe.ExpectedABV
                            </td>
                            <td>
                                @recipe.IBU
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script>
        function getRecipe(recipeId)
        {
            $.ajax({
                url: "/Recipe/GetRecipe/?get=" + recipeId,
                type: "GET",
                success: function (response) {
                    $('#body').html(response);
                },
                error: function () {
                    alert("There was an error");
                }
            })
        }
    </script>
