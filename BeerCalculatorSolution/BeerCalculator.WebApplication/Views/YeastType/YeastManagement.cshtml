@model BeerCalculator.Common.DTOs.MessageContainer<IEnumerable<BeerCalculator.Common.DTOs.YeastTypeDTO>>
<script>
    
</script>
<h2>Yeast Management</h2>
<div>
    <div>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td>
                        ID
                    </td>
                    <td>
                        Yeast Name
                    </td>
                    <td>
                        Low Attenuation Rate
                    </td>
                    <td>
                        High Attenuation Rate
                    </td>
                    <td>
                        Low Temperature Range
                    </td>
                    <td>
                        High Temperature Range
                    </td>
                    <td>
                        Actions
                    </td>
                </tr>
            </thead>
            <tbody>
                @foreach (var yeastType in Model.Data)
                {
                    <tr>
                    <td>
                        <div class="yeast-id">@yeastType.YeastTypeID</div>
                    </td>
                    <td>
                        <div class="yeast-name">@yeastType.YeastName</div>
                    </td>
                    <td>
                         <div class="low-attenuation-rate">@yeastType.LowAttenuationRate</div>
                    </td>
                    <td>
                        <div class="high-attenuation-rate">@yeastType.HighAttenuationRate</div>
                    </td>
                    <td>
                        <div class="low-temperature-range">@yeastType.LowTemperatureRange</div>
                    </td>
                    <td>
                        <div class="high-temperature-range">@yeastType.HighTemperatureRange</div>
                    </td>
                    <td>
                        <button class="btn-sm btn-primary btn-size" data-toggle="modal" data-target="#edit-yeast" onclick="getYeastInformation(@yeastType.YeastTypeID)">Edit</button>
                        <button class="btn-sm btn-danger btn-size" onclick="deleteYeastType(@yeastType.YeastTypeID)">Delete</button>
                    </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div>
        <input type="button" class="btn btn-large btn-success" data-toggle="modal" data-target="#yeast-modal" value="Create Yeast" />
    </div>

    <div id="yeast-modal" class="modal fade collapse" role="dialog">
        <div class="modal-dialog">

<!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Create Yeast Type</h4>
                </div>
                <div class="modal-body">
                    <div class="row bottom-margin-push">
                        <div class="col-lg-6">
                            <label>Name:</label>
                        </div>
                        <div class="col-lg-6">
                            <input id="yeast-name" class="form-control" />
                        </div>
                    </div>


                    <div class="row bottom-margin-push">
                        <div class="col-lg-6">
                            <label>Low Attenutation Rate:</label>
                        </div>
                        <div class="col-lg-6">
                            <input id="low-attenuation-rate" class="form-control" />
                        </div>
                    </div>

                    <div class="row bottom-margin-push">
                        <div class="col-lg-6">
                            <label>High Attenutation Rate:</label>
                        </div>
                        <div class="col-lg-6">
                            <input id="high-attenuation-rate" class="form-control" />
                        </div>
                    </div>

                    <div class="row bottom-margin-push">
                        <div class="col-lg-6">
                            <label>Low Temperature Range:</label>
                        </div>
                        <div class="col-lg-6">
                            <input id="low-temperature-range" class="form-control" />
                        </div>
                    </div>

                    <div class="row bottom-margin-push">
                        <div class="col-lg-6">
                            <label>High Temperature Range:</label>
                        </div>
                        <div class="col-lg-6">
                            <input id="high-temperature-range" class="form-control" />
                        </div>
                    </div>

                    <div class="row bottom-margin-push">
                        <div class="col-lg-12">
                            <label>Description:</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            <textarea id="yeast-description" class="form-control"></textarea>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <input type="button" class="btn btn-success" onclick="saveYeast()" value="Save Yeast" />
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <div id="edit-yeast" class="modal fade collapse" role="dialog">
        <div class="modal-dialog">

<!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Edit Yeast Type</h4>
                </div>
                <div class="modal-body">
                    <div class="row bottom-margin-push">
                        <div class="col-lg-6">
                            <label>Name:</label>
                        </div>
                        <div class="col-lg-6">
                            <input id="edit-yeast-name" class="form-control" />
                        </div>
                    </div>


                    <div class="row bottom-margin-push">
                        <div class="col-lg-6">
                            <label>Low Attenutation Rate:</label>
                        </div>
                        <div class="col-lg-6">
                            <input id="edit-low-attenuation-rate" class="form-control" />
                        </div>
                    </div>

                    <div class="row bottom-margin-push">
                        <div class="col-lg-6">
                            <label>High Attenutation Rate:</label>
                        </div>
                        <div class="col-lg-6">
                            <input id="edit-high-attenuation-rate" class="form-control" />
                        </div>
                    </div>

                    <div class="row bottom-margin-push">
                        <div class="col-lg-6">
                            <label>Low Temperature Range:</label>
                        </div>
                        <div class="col-lg-6">
                            <input id="edit-low-temperature-range" class="form-control" />
                        </div>
                    </div>

                    <div class="row bottom-margin-push">
                        <div class="col-lg-6">
                            <label>High Temperature Range:</label>
                        </div>
                        <div class="col-lg-6">
                            <input id="edit-high-temperature-range" class="form-control" />
                        </div>
                    </div>

                    <div class="row bottom-margin-push">
                        <div class="col-lg-12">
                            <label>Description:</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            <textarea id="edit-yeast-description" class="form-control"></textarea>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <input type="button" class="btn btn-success" onclick="editYeast()" value="Edit Yeast" />
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <input class="hidden" id="edit-yeast-id"/>
</div>





